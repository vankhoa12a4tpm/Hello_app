<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layout.header.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layout.header.li1"), root_path %></li>
        <li><%= link_to t("layout.header.li2"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layout.header.link1"), '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%=t"layout.header.a1" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layout.header.link2"), current_user %></li>
              <li><%= link_to t("layout.header.link3"), '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layout.header.link4"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layout.header.li3"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
